#include <iostream>
#include "person.h"
#include "personenliste.h"
int main()
{
    // Groe√üe, Gewicht, Alter, IQ
	try
	{
		std::vector<Person> personen{ { 1.80, 72.5, 32, 108.3 }, { 1.82, 80.5, 18, 110 }, { 1.90, 110, 46, 122.4 }, { 1.72, 62.5, 22, 130.8 } };
		Personenliste main_liste;
		for (const auto& person : personen) {
			main_liste.person_hinzufuegen(person);
		}
		main_liste.sort_personenliste(main_liste.Sort_eigenschaften::Groesse);
		std::cout << main_liste << '\n';
	}
	catch (const std::runtime_error& e)
	{
		std::cout << e.what();
	}
	return 0;
}
